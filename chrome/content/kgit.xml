<?xml version="1.0"?>

<!DOCTYPE bindings [

]>

<bindings xmlns="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
          xmlns:xbl="http://www.mozilla.org/xbl">
	<binding
		id="kgit-menupopup-xbl"
		extends="chrome://global/content/bindings/popup.xml#popup"
	>
	  <content>
		<xul:menuitem oncommand="kgit.addCommit(event)" label="Add &amp; Commit…"/>
		<xul:menuitem oncommand="kgit.addCommitPush(event)" label="Add &amp; Commit &amp; Push…"/>
		<xul:menuseparator/>
		<xul:menuitem oncommand="kgit.commit(event)" label="Commit…"/>
		<xul:menuitem oncommand="kgit.commitAmend(event)" label="Commit Amend"/>
		<xul:menuseparator/>
		<xul:menuitem oncommand="kgit.commitAll(event)" label="Commit All…"/>
		<xul:menuitem oncommand="kgit.undoLastCommit(event)" label="Undo Last Commit"/>
		<xul:menuseparator/>
		<xul:menuitem oncommand="kgit.diff(event)" label="Diff"/>
		<xul:menuitem oncommand="kgit.status(event)" label="Status"/>
		<xul:menu label="Log" onclick="if(event.originalTarget == this){kgit.menuClick(event);kgit.log(event);}">
		  <xul:menupopup>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.log(event);" label="Log"/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.logExtended(event)" label="Log ( Extended, last 30)"/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.logFull(event)" label="Log ( Full )"/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.blame(event)" label="Blame"/>
		  </xul:menupopup>
		</xul:menu>
		<xul:menuseparator/>
		<xul:menu label="Revert" onclick="if(event.originalTarget == this){kgit.menuClick(event);kgit.revert(event);}">
		  <xul:menupopup>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.revert(event)" label="Revert"/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.revertClean(event)" label="Revert &amp; Clean"/>
			<xul:menuseparator/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.checkoutFilesToObject(event)" label="Checkout Files to Object…"/>
			<xul:menuseparator/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.revertToObject(event)" label="Revert to Object…"/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.checkoutToObject(event)" label="Checkout to Object…"/>
		  </xul:menupopup>
		</xul:menu>
		<xul:menuseparator/>
		<xul:menu label="Push" onclick="if(event.originalTarget == this){kgit.menuClick(event);kgit.push(event);}">
		  <xul:menupopup>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.push(event)" label="Push"/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.pushToOriginMasterMaster(event)" label="Push to 'origin' master:master"/>
		  </xul:menupopup>
		</xul:menu>
		<xul:menuseparator/>
		<xul:menuitem oncommand="kgit.pull(event)" label="Pull"/>
		<xul:menuitem oncommand="kgit.fetch(event)" label="Fetch"/>
		<xul:menuseparator/>
		<xul:menuitem oncommand="kgit.add(event)" label="Add"/>
		<xul:menuitem oncommand="kgit.remove(event)" label="Remove"/>
		<xul:menuitem oncommand="kgit.removeKeepLocal(event)" label="Remove Keep Local"/>
		<xul:menuseparator/>
		<xul:menuitem oncommand="kgit.init(event)" label="Init…"/>
		<xul:menuitem oncommand="kgit.clone(event)" label="Clone…"/>
		<xul:menuseparator/>
		<xul:menu label="Tags" onclick="if(event.originalTarget == this){kgit.menuClick(event);kgit.tagAuto(event);}">
		  <xul:menupopup>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.tagAuto(event)" label="Auto-Tag"/>
			<xul:menuseparator/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.tagBetweenTheTwoLatestTagsLog(event)" label="Between the two latest tags show log"/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.tagBetweenTheTwoLatestTagsDiff(event)" label="Between the two latest tags show diff"/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.tagFromLatestTagLog(event)" label="From latest tag show log"/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.tagFromLatestTagDiff(event)" label="From latest tag show diff"/>
			<xul:menuseparator/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.tagList(event)" label="Tag list"/>
			<xul:menuseparator/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.tagAdd(event)" label="Tag add"/>
			<xul:menuitem oncommand="kgit.menuClick(event);kgit.tagRemove(event)" label="Tag remove"/>
		  </xul:menupopup>
		</xul:menu>
		<xul:menuseparator/>
		<xul:menuitem oncommand="kgit.ignoreOpen(event)" label="Open Git Ignore"/>
		<xul:menuitem oncommand="kgit.ignore(event)" label="Add to Git Ignore"/>
		<xul:menuseparator/>
		<xul:menuitem oncommand="kgit.gitGUI(event)" label="Git GUI…"/>
		<xul:menuitem oncommand="kgit.gitK(event)" label="Gitk…"/>
		<xul:menuitem oncommand="kgit.command(event)" label="Liberal Git Command…"/>
	  </content>
	</binding>
</bindings>
