<?xml version="1.0"?>
<!DOCTYPE overlay PUBLIC "-//MOZILLA//DTD XUL V1.0//EN" "http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

<?xml-stylesheet href="chrome://kgit/content/kgit.css" type="text/css"?>

<overlay
 xmlns:html="http://www.w3.org/1999/xhtml"
 xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
 xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
 
 <script src="chrome://kgit/content/kgit.js" type="application/x-javascript"/>

	<!-- toolbarbutton-->

	  <toolbaritem id="standardToolbar">
		 <toolbarseparator/>
		 <toolbarbutton
			 id="kgit-toolbarbutton"
			 label="Komodin"
			 tooltiptext="Executes Git Commands on Current Document"
			 buttonstyle="pictures"
			 type="button"
			 persist="buttonstyle"
			 oncommand="this.firstChild.openPopup(this, 'after_start')"
			 image="chrome://kgit/content/icon16.png"
		   >
		   <menupopup class="kgit-menupopup-xbl"/>
		 </toolbarbutton>
	   </toolbaritem>
	 
	<!-- places context menu-->
  
	  <menupopup id="places-files-popup" onpopupshown="kgit.placesPopupShown(event)">
		  
		  <menuseparator insertafter="placesContextMenu_separatorDelete"/>
  		  <menu
				id="kgit-places-file-popup"
				insertafter="placesContextMenu_separatorDelete"
				label="Git"
				tooltiptext="Executes Git Commands on Selected Items"
				class="menu-iconic"
				image="chrome://kgit/content/icon16.png"
				target="places">
			  <menupopup class="kgit-menupopup-xbl"/>
		  </menu>
		  
	  </menupopup>
	  
 	<!-- document context menu-->
  
	  <menupopup id="editorContextMenu">
		  
		  <menuseparator insertafter="editor-context-sep-properties"/>
  		  <menu
				id="kgit-document-context-menu"
				insertafter="editor-context-sep-properties"
				label="Git"
				tooltiptext="Executes Git Commands on Current Document"
				class="menu-iconic"
				image="chrome://kgit/content/icon16.png"
		  >
			  <menupopup class="kgit-menupopup-xbl"/>
		  </menu>
		  
	  </menupopup>
	  
  	<!-- tab context menu -->
  
	  <menupopup id="tabContextMenu">
		  
		  <menuseparator insertafter="buffertab-context-sep-properties"/>
  		  <menu
				id="kgit-tab-context-menu"
				insertafter="buffertab-context-sep-properties"
				label="Git"
				tooltiptext="Executes Git Commands on Current Document"
				class="menu-iconic"
				image="chrome://kgit/content/icon16.png"
		  >
			  <menupopup class="kgit-menupopup-xbl"/>
		  </menu>
		  
	  </menupopup>
	  
   	<!--file menu-->
  
	  <menupopup id="popup_file">
		  
		  <menuseparator insertafter="file_print_menuseparator"/>
  		  <menu
				id="kgit-menu-bar-file"
				insertafter="file_print_menuseparator"
				label="Git"
				tooltiptext="Executes Git Commands on Current Document"
				class="menu-iconic"
				image="chrome://kgit/content/icon16.png"
		  >
			  <menupopup class="kgit-menupopup-xbl"/>
		  </menu>
		  
	  </menupopup>
 
</overlay>